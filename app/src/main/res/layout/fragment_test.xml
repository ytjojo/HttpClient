<?xml version="1.0" encoding="utf-8"?>
<com.ytjojo.widget.StickyNavLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                   android:id="@+id/stickyLayout"
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:background="#FF0000"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffee00"
        android:orientation="vertical">
        <com.ytjojo.drawable.LoadingView
            android:id="@+id/img_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_setDivision1"
            android:text="头部"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
        <TextView
            android:id="@+id/tv_setDivision2"
            android:text="头部1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
        <TextView
            android:id="@+id/tv_setDivision3"
            android:text="头部2"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
        <TextView
            android:id="@+id/tv_setDivision4"
            android:text="头部3"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

    </LinearLayout>
    <ScrollView
        android:background="@color/material_cyan_800"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="#00FF00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_gonext"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center"
                android:text="跳转"/>

            <TextView
                android:id="@+id/tv_gonext2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center"
                android:text="跳转2"/>

            <TextView
                android:id="@+id/tv_gonext3"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:gravity="center"
                android:text=""/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:gravity="center"
                android:text="222"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:gravity="center"
                android:text="111"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:gravity="center"
                android:text="333"/>
        </LinearLayout>
    </ScrollView>
</com.ytjojo.widget.StickyNavLayout>